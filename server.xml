<?xml version="1.0" encoding="UTF-8"?>
<Server port="8005" shutdown="SHUTDOWN">
    <Service name="Catalina">

        <!-- HTTP connector with GZIP compression 
        <Connector port="8080"
                   protocol="HTTP/1.1"
                   connectionTimeout="20000"
                   compression="on"
                   compressionMinSize="1024"
                   compressableMimeType="text/html,text/xml,text/plain,text/css,text/javascript,application/javascript,application/json,application/xml"
                   URIEncoding="UTF-8"
                   redirectPort="8443"
                   useSendfile="false" />-->
        <Connector port="8080"
           protocol="org.apache.coyote.http11.Http11NioProtocol"
           connectionTimeout="60000"
           maxThreads="500"               
           acceptCount="200"
           maxKeepAliveRequests="100"
           maxPostSize="52428800"       
           disableUploadTimeout="false"   
           useKeepAliveTimeout="true"
           keepAliveTimeout="60000"
           useSendfile="false"
           compression="on"
           compressionMinSize="1024"
           compressableMimeType="text/html,text/xml,text/plain,text/css,text/javascript,application/javascript,application/json,application/xml"
           URIEncoding="UTF-8"
           />

        <Engine name="Catalina" defaultHost="localhost">

            <Host name="localhost"  appBase="webapps"
                  unpackWARs="true" autoDeploy="true">

                <!-- Optional: Context example -->
                <!--
                <Context path="" docBase="myapp" />
                -->

            </Host>
        </Engine>
    </Service>
</Server>
